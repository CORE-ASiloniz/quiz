<section>

<header>
  <h2> Usuarios </h2>
</header>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Administrador</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% for (var i in users) { %>
      <tr>
        <td><a href="/users/<%= users[i].id %>"><%= users[i].username %></a><%= users[i].isAdmin ? " (Admin)" : "" %></td>
        <% if(session.user) { %>
       <td><a href="/users/<%= users[i].id %>/edit"><button>editar</button></a></td>
       <td><a href="/users/<%= users[i].id %>/?_method=DELETE" onClick="return confirm('Borrar cuenta: <%= users[i].username %>');"><button>borrar</button></a></td>
     <% } %>

      </tr>
    <%  }; %>
  </tbody>
</table>

<footer>
  <nav> 
      <% if(session.user) { %>
            <a href="/users/new"><button type="button">Crear usuario</button></a>
      <% } %>
  </nav>
</footer>
<section>