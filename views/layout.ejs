<html lang="en">
<html>
	<head>
		<meta charset="UTF-8"><title>Preguntas</title>
		<link rel='stylesheet' type='text/css'  href='/stylesheets/style.css' />	
		<link rel='stylesheet' type='text/css' media='only screen and (min-width: 530 px) and (min-device-width: 481 px)'
		href='stylesheets/wide.css' />
		<link rel='stylesheet' type='text/css' media='only screen and (max-width: 480 px)'
		 href='stylesheets/smartphone.css' />	
	</head>
<body>
<div id="page-wrap">
	<header class="main">
	   <h2>Quiz: el juego de las preguntas locas</h2>
	</header>

	
<nav class="main" role="navigation">
	<span><a href="/">Inicio</a></span>
	<span><a href="/quizes">Preguntas</a></span>
	<span><a href="/author">Créditarros</a></span>
</nav>
<section>
		<% if(messages.info) { %>
			<article id="flashinfo">
				<h3>Información de interés:</h3>
				<ul>
					<% for(var i in messages.info) { %>
						<li><%= messages.info[i] %></li>
					<% } %>
				</ul>
			</article>
		<% } %>

		<% if(messages.success) { %>
			<article id="flashsuccess">
				<h3>Tareas realizadas con éxito:</h3>
				<ul>
					<% for(var i in messages.success) { %>
						<li><%= messages.success[i] %></li>
					<% } %>
				</ul>
			</article>
		<% } %>

		<% if(messages.error) { %>
			<article id="flasherror">
				<h3>Errores encontrados:</h3>
				<ul>
					<% for(var i in messages.error) { %>
						<li><%= messages.error[i] %></li>
					<% } %>
				</ul>
			</article>
		<% } %>
	</section>

<section class="main">
<%- body %>
</section>
</div>
<footer class="main">
	<a href="http://es.wikipedia.org/wiki/Quiz">
	¿Qué es un quizamen?</a>
</footer>
</div>
</body>
</html>
